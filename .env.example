# FOR ME System - Environment Variables
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to git!

# Google API Key (required)
# Get your key from: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=your-api-key-here

# Google Cloud Project ID (optional, for deployment)
# Only needed if you're deploying to Cloud Run
GOOGLE_CLOUD_PROJECT=your-project-id-here

# Cloud Run Region (optional, defaults to us-central1)
CLOUD_RUN_REGION=us-central1

# Database Configuration (optional, for persistent storage)
# Only needed if USE_PERSISTENT_STORAGE=true
USE_PERSISTENT_STORAGE=false
DATABASE_URL=sqlite:///for_me_data.db
